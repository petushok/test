<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 style="@style/Item.Sticky"
                android:id="@+id/sticky" >
    <!--android:background="@drawable/backgroud"-->

<org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:clickable="true"
        android:focusable="true"
        style="@style/Item.Sticky"
        />
    android:background="@drawable/border"

<View android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:background="@drawable/maphole"
      android:alpha="100" android:focusable="false"/>
<Button
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:id="@+id/btnzoomup" android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true" android:layout_marginTop="14dp" android:text="+"/>
<Button
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:id="@+id/btnzoomdown"
        android:layout_alignRight="@+id/mapview" android:layout_alignTop="@+id/btnzoomup"
        android:layout_alignBottom="@+id/btnzoomup" android:layout_marginRight="10dp"
        android:alpha="80" android:text="-"/>

</RelativeLayout>